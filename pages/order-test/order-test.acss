.date-radio {
  padding: 26rpx;
}

.date-radio label + label {
  margin-left: 20rpx;
}


.row {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.row-title {
  flex: 1;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 34rpx;
  color: #000;
}

.row-extra {
  flex-basis: initial;
  font-size: 32rpx;
  color: #888;
}

.row-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.gui-form-item-textarea {
  padding: 0.3rem 0;
}

.gui-form-item-textarea .page-section-title{
  font-size: 0.28rem;
}
.gui-form-item-textarea textarea {
  font-size: 0.28rem;
  color: #969494;
}
.choose-button {
  padding: 0.3rem 0;
}
.choose-button button {
  color: #0089ff;
  background-color: transparent;
  border-color: #0089ff;
}
.people-wrapper {
  padding: 0.3rem 0;
}
.people-container {
  display: block;
  width: 100%;
  color: #2482e6;
  border: 1px dotted #000;
  padding: 0.3rem 0.2rem;
  border-radius: 5px;
  box-sizing: border-box;  
  max-height: 3rem;
  overflow: scroll;
}