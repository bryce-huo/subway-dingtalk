<view class="main">
  <view class="gui-padding">
    <form onSubmit="formSubmit">
      <view>
        <image mode="widthFix" class="yuyue-banner" mode="" src="/static/yuyue_team.jpg"></image>
			</view>
      <view class="gui-form-item gui-border-b">
				<text class="gui-form-label">活动主题</text>
				<view class="gui-form-body">
					<picker name="title" onChange="bindThemeChange" range="{{themeArray}}" value="{{themeIndex}}">
						<view class="gui-flex gui-rows gui-nowrap gui-space-between gui-align-items-center">
							<text class="gui-text gui-picker-placeholder">{{themeArray[themeIndex]}}</text>
							<text class="gui-form-icon iconfont icon-arrow-down gui-text-center gui-color-gray"></text>
						</view>
					</picker>
				</view>
			</view>
      <view class="gui-form-item gui-border-b">
        <text class="gui-form-label">活动时间</text>
        <view class="gui-form-body">
          <view onTap="selectDate">
						<view class="gui-flex gui-rows gui-nowrap gui-space-between gui-align-items-center">
							<text class="gui-text gui-picker-placeholder">{{activity_date ? activity_date : '请选择活动时间'}}</text>
							<text class="gui-form-icon iconfont icon-arrow-down gui-text-center gui-color-gray"></text>
						</view>
					</view>
        </view>
      </view>
      <view class="gui-form-item gui-border-b">
        <text class="gui-form-label">预约负责人</text>
        <view class="gui-form-body">
          <input type="text" class="gui-form-input" 
            name="person" placeholder="请输入预约负责人" />
        </view>
      </view>
      <view class="gui-form-item gui-border-b">
        <text class="gui-form-label">联系方式</text>
        <view class="gui-form-body">
          <input type="text" class="gui-form-input" 
            name="mobile" placeholder="请输入联系方式" />
        </view>
      </view>
      <view class="gui-form-item-textarea gui-border-b">
        <view class="page-section-title">活动需求</view>
        <view class="page-section-demo">
          <textarea name="remark01" onBlur="bindTextAreaBlur" auto-height placeholder="请输出活动需求" />
        </view>
      </view>
      <view class="gui-form-item-textarea gui-border-b">
        <view class="page-section-title">其他需求</view>
        <view class="page-section-demo">
          <textarea name="remark02" onBlur="bindTextAreaBlur" auto-height placeholder="请输出其他需求" />
        </view>
      </view>
      <view style="height:80rpx;"></view>
      <view class="order-btns">
				<button form-type="submit" loading="{{submitLoading}}" disabled="{{submitLoading}}" hover-class="btn-hover" type="primary">确认预约</button>
			</view>
			<view style="height:80rpx;"></view>
    </form>
  </view>
</view>