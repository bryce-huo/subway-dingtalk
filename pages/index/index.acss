.page {
  background: #F7F7F7;
}
.category__wrap {
  overflow: hidden
}
.category__wrap .category__item{
  position: relative;
  float: left;
  width: 25%;
  padding: .15rem 0;
  text-align: center;
}
.category__img {
  position: relative;
  display: inline-block;
  width: 12vw;
  height: 12vw;
}
.category__img image{
  display: block;
  width: 100%;
  height: 100%;
}
.category__title {
    display: block;
    margin-top: .133333rem;
    color: #666;
    font-size: .24rem;  
}

